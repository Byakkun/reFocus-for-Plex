<!-- RSS FEED -------------------------------------------------------------------------------------------------------------------------->
		<control type="group">
			<posx>0</posx>
			<posy>685</posy>
			<visible>Skin.HasSetting(enableRSSFeed) + ![Window.IsActive(10133) | Window.IsActive(10112)]</visible>
			<animation effect="slide" start="0,100" end="0,0" time="200" tween="Quadratic" easing="In">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,100" time="200" tween="Quadratic" easing="Out">WindowClose</animation>
			<animation effect="slide" start="0,0" end="-1280,0" time="250" tween="Cubic" easing="Out" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
			<animation effect="slide" start="-1280,0" end="0,0" time="250" tween="Cubic" easing="Out" condition="!ControlGroup(4000).HasFocus()">Conditional</animation>
			<control type="image">
				<posx>-20</posx>
				<width>1320</width>
				<height>38</height>
				<texture border="9">home/rssBackground.png</texture>
				<visible>Skin.HasSetting(enableRSSFeed)</visible>
			</control>	
			<control type="rss" id="1">
				<posx>0</posx>
				<posy>1</posy>
				<include>screenwidth</include>
				<font>normalLow</font>
				<urlset>1</urlset>
				<height>32</height>
				<aligny>center</aligny>
				<titlecolor>Color1</titlecolor>
				<headlinecolor>Color1</headlinecolor>
				<highlightcolor>Focused</highlightcolor>
				<include>fadeinout</include>
			</control>
		</control>


<!-- CALL MENU -------------------------------------------------------------------------------------------------------------------------->
	<include>HomeMenu</include>
	<include>HomeRecentMenu</include>
  </controls>
</window>