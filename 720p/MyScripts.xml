<window id="20">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	
	<controls>
		<include>themeBackground2</include>
		
		<control type="group">
			<include>ListViewNodes</include>
			<include>Icons</include>
			<include>AllViewCommonPageControls</include>
			
			<control type="label">
				<label>[LOWERCASE]$LOCALIZE[247][/LOWERCASE]</label>
				<include>PageLabel</include>
			</control>
			
			<control type="group">
				<posx>640</posx>
				<posy>110</posy>
				<visible>Control.IsVisible(50)</visible>
				<include>infoDialogHide</include>
				<include>transition2</include>
				<include>contextMenuHide</include>

				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>560</width>
					<height>128</height>
					<aspectratio align="left">keep</aspectratio>
					<fadetime>200</fadetime>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
					<visible>!IsEmpty(ListItem.Property(Addon.Name))</visible>
					<include>thumbFadeTime</include>
				</control>
				<control type="group">
					<posy>150</posy>
					<animation effect="slide" start="0,0" end="0,-270" time="0" condition="IsEmpty(ListItem.Icon)">Conditional</animation>
					<include>fadeinout</include>
					<control type="label">
						<description>Type</description>
						<width>560</width>
						<height>30</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>mediumLow</font>
						<label>[B]$LOCALIZE[146,,:][/B] $INFO[ListItem.Property(Addon.Type)]</label>
						<textcolor>Color1</textcolor>
						<visible>!IsEmpty(ListItem.Property(Addon.Type))</visible>
					</control>
					<control type="label">
						<description>Author</description>
						<posy>30</posy>
						<width>532</width>
						<height>30</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>mediumLow</font>
						<label>[B]$LOCALIZE[21863]:[/B] $INFO[ListItem.Property(Addon.Creator)]</label>
						<textcolor>Color1</textcolor>
						<visible>!IsEmpty(ListItem.Property(Addon.Creator))</visible>
					</control>
					<control type="label">
						<description>Version</description>
						<posy>60</posy>
						<width>532</width>
						<height>30</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>mediumLow</font>
						<label>[B]$LOCALIZE[24051][/B] $INFO[ListItem.Property(Addon.Version)]</label>
						<textcolor>Color1</textcolor>
						<visible>!IsEmpty(ListItem.Property(Addon.Version))</visible>
					</control>
					<control type="label">
						<description>Rating</description>
						<posy>90</posy>
						<width>532</width>
						<height>30</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>mediumLow</font>
						<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Property(Addon.Rating)]</label>
						<textcolor>Color1</textcolor>
						<visible>!IsEmpty(ListItem.Property(Addon.Rating))</visible>
					</control>
					<control type="textbox" id="400">
						<description>Description</description>
						<posy>130</posy>
						<width>550</width>
						<height>270</height>
						<font>mediumLow</font>
						<align>left</align>
						<textcolor>Color1</textcolor>
						<label>$INFO[ListItem.Property(Addon.Description)]</label>
					</control>
				</control>
			</control>
		</control>
		<include>allscreens</include>
		<include>FilesMenu</include>
	</controls>
</window>
