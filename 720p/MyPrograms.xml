<window id="1">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>

	<controls>
		<include>themeBackground2</include>

		<control type="group">
			<include>ListViewNodes</include>
			<include>Icons</include>
			<include>AllViewCommonPageControls</include>
			
			<control type="label">
				<label>[LOWERCASE]$LOCALIZE[0][/LOWERCASE]</label>
				<include>PageLabel</include>
				<visible>IsEmpty(Container.PluginName) + !stringcompare(container.folderpath,plugin://programs/)</visible>
			</control>
			<control type="label">
				<label>[LOWERCASE]$LOCALIZE[31905][/LOWERCASE]</label>
				<include>PageLabel</include>
				<visible>stringcompare(container.folderpath,plugin://programs/)</visible>
			</control>
			<control type="label">
				<label>[LOWERCASE]$INFO[Container.PluginName][/LOWERCASE]</label>
				<include>PageLabel</include>
			</control>

			<control type="group">
				<posx>640</posx>
				<posy>110</posy>
				<visible>Control.IsVisible(50)</visible>
				<include>infoDialogHide</include>
				<include>transition2</include>
				<include>contextMenuHide</include>

				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>560</width>
					<height>128</height>
					<aspectratio align="left">keep</aspectratio>
					<fadetime>200</fadetime>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
					<visible>!IsEmpty(ListItem.Property(Addon.Name))</visible>
					<include>thumbFadeTime</include>
				</control>
			</control>
		</control>	
		<include>allscreens</include>
		<include>FilesMenu</include>
	</controls>
</window>
