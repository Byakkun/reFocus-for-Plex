<!---------- THUMBS VIEW (PICTURES) ------------------------------------------------------------------------------->
	<include name="ThumbnailsP">
		<control type="panel" id="57">
			<viewtype label="Thumbnails">bigicons</viewtype>
			<posx>75</posx>
			<posy>90</posy>
			<width>1240</width>
			<height>510</height>
			<onleft>9000</onleft>
			<onright>75</onright>
			<onup>57</onup>
			<ondown>57</ondown>
			<preloaditems>4</preloaditems>
			<scrolltime>200</scrolltime>
			<pagecontrol>75</pagecontrol>
			<include>transition2</include>
			<include>infoDialogHide</include>
			<include>contextMenuHide</include>
			<visible>Container(57).HasFiles + !IsEmpty(Container.FolderPath)</visible>	

			<itemlayout height="170" width="220">
				<control type="image">
					<width>219</width>
					<height>169</height>
					<texture border="30">frames/albumFrameSmall.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="largeimage">
					<posx>10</posx>
					<posy>10</posy>
					<width>200</width>
					<height>150</height>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<texture background="true" diffuse="frames/albumFrameMaskSmall.png" fallback="pictureThumb.png">$INFO[ListItem.Thumb]</texture>
				</control>
			</itemlayout>											
			<focusedlayout height="170" width="220">
				<control type="image">
					<width>219</width>
					<height>169</height>
					<texture border="30">frames/albumFrameSmall.png</texture>
					<aspectratio>stretch</aspectratio>
					<include>thumbPanelFocus</include>
				</control>
				<control type="largeimage">
					<posx>10</posx>
					<posy>10</posy>
					<width>200</width>
					<height>150</height>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<texture background="true" diffuse="frames/albumFrameMaskSmall.png" fallback="pictureThumb.png">$INFO[ListItem.Thumb]</texture>
					<include>thumbPanelFocus</include>
				</control>
			</focusedlayout>
		</control>
	</include>

	

<include name="GalleryP">																					

	<control type="group">
		<visible>Control.IsVisible(53)</visible>
		<include>transition2</include>
		<include>contextMenuHide</include>
		<control type="image">
			<posy>106</posy>
			<include>screenwidth</include>
			<height>478</height>
			<aspectratio align="center">stretch</aspectratio>
			<texture border="0,31,0,31">frames/panelFrame.png</texture>
			<include>transition2</include>
			<include>contextMenuHide</include>
		</control>
	</control>

		<control type="wraplist" id="53">
			<viewtype label="Gallery">bigwrap</viewtype>
			<posx>-485</posx>
			<posy>135</posy>
			<width>1955</width>
			<height>800</height>
			<onleft>53</onleft>
			<onright>53</onright>
			<onup>9000</onup>
			<ondown>8000</ondown>
			<scrolltime>200</scrolltime>
			<orientation>horizontal</orientation>
			<focusposition>1</focusposition>
			<preloaditems>5</preloaditems>
			<include>transition2</include>
			<include>contextMenuHide</include>
			<visible>!IsEmpty(Container.FolderPath)</visible>

			<itemlayout height="800" width="749">
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
				</control>
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.FilenameAndPath]</texture>
				</control>
				
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">special://skin/backgrounds/library/picturesDefaultSmall.png</texture>
					<visible>IsEmpty(ListItem.Thumb)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="800" width="750">
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
					<animation effect="zoom" start="100" end="180" time="200" center="auto" tween="Cubic" condition="Control.HasFocus(8000)">Conditional</animation>
				</control>
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.FilenameAndPath]</texture>
					<animation effect="zoom" start="100" end="180" time="200" center="auto" tween="Cubic" condition="Control.HasFocus(8000)">Conditional</animation>
				</control>
				<control type="largeimage">
					<width>750</width>
					<height>422</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">special://skin/backgrounds/library/picturesDefaultSmall.png</texture>
					<visible>IsEmpty(ListItem.Thumb)</visible>
				</control>
			</focusedlayout>
		</control>
	</include>
	
