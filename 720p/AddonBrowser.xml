					<control type="textbox" id="400">
						<description>Description</description>
						<posy>130</posy>
						<width>550</width>
						<height>270</height>
						<font>mediumLow</font>
						<align>left</align>
						<textcolor>Color1</textcolor>
						<label>$INFO[ListItem.Property(Addon.Description)]</label>
					</control>
				</control>
			</control>
			
