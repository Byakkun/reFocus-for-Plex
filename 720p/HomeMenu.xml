<includes>
	<include name="HomeMenu">
		<control type="list" id="300">
			<posy>20</posy>
			<width>1100</width>
			<height>700</height>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft>300</onleft>
			<onright>-</onright>
			<orientation>vertical</orientation>
			<focusposition>3</focusposition>
			<scrolltime>150</scrolltime>
			<visible allowhiddenfocus="true">![ControlGroup(1100).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(2100).HasFocus()]</visible>		
			<include>homeMenuToggle</include>
			<include>homeMenusLayout</include>
			<animation effect="slide" start="0,0" end="-1280,0" time="200" tween="Quadratic" easing="Out" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
			
			<content>
				<item id="1">
					<label>[LOWERCASE]$LOCALIZE[157][/LOWERCASE]</label>
					<onclick>SetFocus(1110)</onclick>
				</item>
				<item id="2">
					<label>[LOWERCASE]$LOCALIZE[2][/LOWERCASE]</label>
					<onclick>SetFocus(1120)</onclick>
				</item>
				<item id="3">
					<label>[LOWERCASE]$LOCALIZE[1][/LOWERCASE]</label>
					
					<onclick>SetFocus(1130)</onclick>
				</item>
				<item id="4">
					<label>[LOWERCASE]$LOCALIZE[31006][/LOWERCASE]</label>
					<onclick>SetFocus(1140)</onclick>
					<visible>!Skin.HasSetting(homemenuAccessories)</visible>
				</item>
				<item id="5">
					<label>[LOWERCASE]$LOCALIZE[5][/LOWERCASE]</label>
					<onclick>SetFocus(1150)</onclick>
				</item>
				<item id="6">
					<label>[LOWERCASE]$LOCALIZE[8][/LOWERCASE]</label>
					<label2>$INFO[Weather.Conditions], $INFO[Weather.Temperature]</label2>
					<onclick>ActivateWindow(2600)</onclick>
					<visible>Skin.HasSetting(homemenuWeather)</visible>
				</item>
				<item id="7">
					<label>[LOWERCASE]$LOCALIZE[0][/LOWERCASE]</label>
					<onclick>ActivateWindow(Programs)</onclick>
					<visible>Skin.HasSetting(homemenuPrograms)</visible>
				</item>
				<item id="7">
					<label>[LOWERCASE]$LOCALIZE[247][/LOWERCASE]</label>
					<onclick>ActivateWindow(Scripts)</onclick>
					<visible>Skin.HasSetting(homemenuScripts)</visible>
				</item>
				<item id="8">
					<label>[LOWERCASE]$LOCALIZE[24001][/LOWERCASE]</label>
					<onclick>ActivateWindow(AddonBrowser)</onclick>
					<visible>Skin.HasSetting(homemenuAddons)</visible>
				</item>
				<item id="9">
					<label>[LOWERCASE]$LOCALIZE[1036][/LOWERCASE]</label>
					<onclick>ActivateWindow(Favourites)</onclick>
					<visible>Skin.HasSetting(homemenuFavourites)</visible>
				</item>
				<item id="10">
					<label>[LOWERCASE]$LOCALIZE[341][/LOWERCASE]</label>
					<onclick>XBMC.PlayDVD</onclick>
					<visible>System.HasMediadvd</visible>
				</item>
				<item id="11">
					<label>[LOWERCASE]$LOCALIZE[31013][/LOWERCASE]</label>
					<onclick>SetFocus(1160)</onclick>
					<visible>!Skin.HasSetting(homemenuExit)</visible>
				</item>
				<item id="12">
					<label>[LOWERCASE]$LOCALIZE[13350][/LOWERCASE]</label>
					<onclick>ActivateWindow(500)</onclick>
					<label2>$INFO[MusicPlayer.Artist]-$INFO[MusicPlayer.Title]</label2>
					<visible>Player.HasAudio + Skin.HasSetting(homemenuNP)</visible>
				</item>
				<item id="13">
					<label>$LOCALIZE[13350]</label>
					<onclick>ActivateWindow(28)</onclick>
					<visible>Player.HasVideo + Skin.HasSetting(homemenuNP)</visible>
					<label2>$INFO[VideoPlayer.TVShowTitle,,: ]$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Title]</label2>
				</item>
				<item id="14">
					<label>[LOWERCASE]reload[/LOWERCASE]</label>
					<onclick>xbmc.ReloadSkin()</onclick>
					<visible>!Skin.HasSetting(homemenuReloadSkin)</visible>
				</item>
			</content>
		</control>
		<include>homeSubMenu</include>
	</include>
</includes>