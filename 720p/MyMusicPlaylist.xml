<window id="500">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<include>themeBackground2</include>
		
		<include>allscreens</include>

		<control type="label">
			<label>[LOWERCASE]$LOCALIZE[2] [COLOR=Color2]$LOCALIZE[559][/COLOR][/LOWERCASE]</label>
			<include>musicPageLabel</include>
			<visible>!Window.IsActive(2001)</visible>
		</control>

		<include>LibraryPlaylistMenu</include>
		
		<control type="image">
			<posx>421</posx>
			<posy>242</posy>
			<width>860</width>
			<height>145</height>
			<texture border="0,30,0,30">views/list-focus.png</texture>
			<visible>Control.IsVisible(50) + !Window.IsActive(2001)</visible>
			<include>contextMenuHide</include>
			<include>transition2</include>
			<include>infoDialogHide</include>
		</control>
		
		
		
		<include>PlaylistViewM</include>

			<control type="group">
				<posx>10</posx>
				<posy>60</posy>
				<include>infoDialogHide</include>
				<include>transition2</include>
				<include>contextMenuHide</include>
	
				<control type="group">
					<control type="image">
						<width>438</width>
						<height>438</height>
						<texture border="55">frames/albumFrame.png</texture>
						<aspectratio>stretch</aspectratio>
						<include>thumbFadeTime</include>
					</control>
					<control type="largeimage">
						<posx>27</posx>
						<posy>27</posy>
						<width>384</width>
						<height>384</height>
						<texture background="true" diffuse="frames/albumFrameMask.png" scalediffuse="false">AlbumThumb.png</texture>
						<aspectratio scalediffuse="false" align="center">scale</aspectratio>
						<include>thumbFadeTime</include>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="largeimage">
						<posx>27</posx>
						<posy>27</posy>
						<width>384</width>
						<height>384</height>
						<texture background="true" diffuse="frames/albumFrameMask.png" scalediffuse="false">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false" align="center">scale</aspectratio>
						<include>thumbFadeTime</include>
					</control>
				</control>
			</control>
			
			<control type="group">
				<posx>35</posx>
				<posy>550</posy>
				<visible>Control.IsVisible(50) + [Container.Content(albums) | Container.Content(songs)]</visible>
				<include>infoDialogHide</include>
				<include>transition2</include>
				<include>contextMenuHide</include>
				<control type="image">
					<posy>0</posy>
					<width>387</width>
					<height>150</height>
					<texture border="0">-black.png</texture>
				</control>
				<control type="group">
					<posx>129</posx>
					<posy>0</posy>
					<include>labelFlagsBig</include>
				</control>
			</control>	
	</controls>
</window>
