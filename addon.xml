<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.refocus"
  version="0.8"
  name="reFocus"
  provider-name="Jeroen">
  <requires>
    <import addon="xbmc.gui" version="2.11"/>
  </requires>
  <extension 
    point="xbmc.gui.skin"
    defaultresolution="720p" 
    defaultresolutionwide="720p"
    defaultthemename="textures.xbt" 
    effectslowdown="1.00"
    debugging="false"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion app="xbmc">28000</minversion>
    <summary>reFocus by Jeroen</summary>
    <summary lang="nl">reFocus skin door Jeroen</summary>
    <description>reFocus aims to offer a clean elegant interface to XBMC, putting your media at the center of your experience.</description>
    <description lang="nl"></description>
    <disclaimer>drugs are bad mkay?</disclaimer>
    <disclaimer lang="nl"></disclaimer>
  </extension>
</addon>
